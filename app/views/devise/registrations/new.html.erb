<div class="row">
  <div class="col-xl-4 offset-xl-4 col-sm-12">
    <h2>Sign up</h2>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <label for="email">Email</label>
          <%= f.email_field :email, autofocus: true,autocomplete: false, class: 'form-control'%>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password,  autocomplete: false, class: 'form-control' %>
        </div>

        <div class="form-group">
          <label for="password">Password Confirmation</label>
          <%= f.password_field :password_confirmation,autocomplete: false, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
    <% end %>
    <%= render "devise/shared/links" %>

  </div>
</div>









