<div class="row">
  <div class="col-xl-4 offset-xl-4 col-sm-12">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <label for="email">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <%= f.password_field :password, autocomplete: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>

  </div>
</div>