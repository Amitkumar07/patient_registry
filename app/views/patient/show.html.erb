<div class="row">
  <div class="col-xl-6 offset-xl-3 col-sm-12">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>First Name</td>
          <td><%= @patient.first_name %></td>
        </tr>
        <tr>
          <td>Last Name</td>
          <td><%= @patient.last_name %></td>
        </tr>
        <tr>
          <td>Email</td>
          <td><%= @patient.email %></td>
        </tr>
        <tr>
          <td>Medical Record Number</td>
          <td><%= @patient.mrn %></td>
        </tr>
        <tr>
          <td>Zip</td>
          <td><%= @patient.zip %></td>
        </tr>
        <tr>
          <td>Mobile Number</td>
          <td><%= @patient.mobile_number %></td>
        </tr>
        <tr>
          <td>Is Insured</td>
          <td><%= @patient.is_insured ? 'Yes' : 'No' %></td>
        </tr>
      </tbody>
    </table>
    <div class="form-group">
      <a href="<%= edit_patient_path(@patient) %>" class='btn btn-primary'>Edit Patient Records</a>
      <a href="<%= patient_documents_path(@patient) %>" class='btn btn-primary'>Edit Patient Documents</a>
    </div>
  </div>
</div>