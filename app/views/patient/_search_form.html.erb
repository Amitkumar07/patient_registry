<%= form_tag(patient_index_path,method: :get, class: 'form-inline')  do %>
    <div class="form-group">
      <%= text_field_tag :term, params[:term], placeholder: 'Seach name, mrn, mobile number', class: 'form-control' %>
    </div>
    <div class="form-group mx-sm-3">
      <label class="pr-2">Is Insured? </label>
      <%= select_tag 'is_insured', options_for_select([['Yes', true],['No', false]], params[:is_insured]) , prompt: "Select", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Search',name: nil, class: 'btn btn-info' %>
    </div>
<% end %>